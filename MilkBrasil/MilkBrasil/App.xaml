<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MilkBrasil.App">
    <Application.Resources>

        <Color x:Key="MainColor">#597d84</Color>

        <Style x:Key="Menus" TargetType="Label">
            <Setter Property="FontFamily" Value="Fredoka_Condensed-Bold.ttf"/>
           <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>

        <Style x:Key="ButtonCadastroCooperados" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource MainColor}"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="ContentLayout" Value="Left, 10"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="CornerRadius" Value="30"/>
        </Style>

       

    </Application.Resources>
</Application>