<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MilkBrasil.MainPage">
    <ContentPage.Content>
        <StackLayout
            Margin="10"
          >
            <Frame BackgroundColor="Transparent" Padding="0" CornerRadius="13" HeightRequest="500">
                <Image
                    Source="lagtvmainpage.png"/>
            </Frame>
            <FlexLayout
               
                Padding="10,20,20,10"
               
                >
                <Frame
                    
                    BackgroundColor="Transparent">
                    <Image
                    Source="brasil.png"/>
                </Frame>
   
                <StackLayout
                >
                    <Label Text="MILK AUSTÁLIA" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" FontSize="30" FontAttributes="Bold" Padding="20"/>
                </StackLayout>
   
            </FlexLayout>
          
            <Label Text="Gestão inteligente para as cooperativas leiteiras." HorizontalTextAlignment="Center" Padding="20" TextColor="Gray" FontSize="20"/>
        </StackLayout>
    </ContentPage.Content>
  

</ContentPage>
